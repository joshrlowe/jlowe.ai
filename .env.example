# MongoDB (existing - will be deprecated after migration)
MONGODB_URI=mongodb://localhost:27017/jloweai

# PostgreSQL (new database)
DATABASE_URL=postgresql://username:password@localhost:5432/jloweai?schema=public

# NextAuth.js (for authentication)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Email Service (for blog notifications)
# Choose one of the following providers:

# Option 1: Resend (recommended)
RESEND_API_KEY=your-resend-api-key

# Option 2: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: AWS SES
# AWS_SES_ACCESS_KEY_ID=your-access-key
# AWS_SES_SECRET_ACCESS_KEY=your-secret-key
# AWS_SES_REGION=us-east-1

# Application
NODE_ENV=development
